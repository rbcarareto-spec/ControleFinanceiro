@model ControleFinanceiro.Aplicacao.DTOs.TransacaoFormDto

@{
    ViewData["Title"] = "Editar Transação";
}
<!-- Exibe erros Model State-->
@if (ViewData.ModelState.Any(x => x.Key == ""))
{
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Erro Validação:</strong>
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
                            <span>@error.ErrorMessage</span>
        }
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Descricao" class="form-label fw-bold"></label>
                        <input asp-for="Descricao" class="form-control" placeholder="Ex: Salário, Supermercado..." />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Data" class="form-label fw-bold"></label>
                        <input asp-for="Data" class="form-control" type="date" />
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Valor" class="form-label fw-bold"></label>
                        <input asp-for="Valor" class="form-control" placeholder="0,00" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoriaId" class="form-label fw-bold">Categoria</label>
                        <select asp-for="CategoriaId" class="form-select">
                            <option value="">Selecione uma categoria</option>
                            @if (Model.Categorias != null)
                            {
                                @foreach (var categoria in Model.Categorias)
                                {
                                    <option value="@categoria.Id">@categoria.Nome</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label fw-bold"></label>
                    <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações opcionais..."></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Atualizar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

