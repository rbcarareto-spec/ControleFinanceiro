@model ControleFinanceiro.Aplicacao.DTOs.DashboardDto

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>📊 Dashboard Financeiro</h2>
</div>

<!-- Cards de Resumo -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-success shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-success mb-1">Total Receitas</h6>
                        <h3 class="mb-0 text-success fw-bold">@Model.TotalReceitas.ToString("C")</h3>
                    </div>
                    <div class="fs-1 text-success">
                        <i class="bi bi-arrow-up-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-danger mb-1">Total Despesas</h6>
                        <h3 class="mb-0 text-danger fw-bold">@Model.TotalDespesas.ToString("C")</h3>
                    </div>
                    <div class="fs-1 text-danger">
                        <i class="bi bi-arrow-down-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card @(Model.Saldo >= 0 ? "border-success" : "border-danger") shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Saldo Atual</h6>
                        <h3 class="mb-0 @(Model.Saldo >= 0 ? "text-success" : "text-danger") fw-bold">
                            @Model.Saldo.ToString("C")
                        </h3>
                    </div>
                    <div class="fs-1 @(Model.Saldo >= 0 ? "text-success" : "text-danger")">
                        <i class="bi bi-wallet2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card-footer text-end">
    <a asp-controller="Transacoes" asp-action="Index" class="btn btn-outline-primary btn-sm">
        Visualizar transações
    </a>
</div>
